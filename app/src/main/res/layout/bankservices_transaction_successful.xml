<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bankservices.TransactionSuccessfulActivity">

    <TextView
        android:id="@+id/constTransactionSuccessfulTextView"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:gravity="center|center_vertical"
        android:text="Transaction Successful"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transactionDetailsTextView"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="547dp"
        android:contentDescription="Transaction details here"
        android:gravity="center|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constTransactionSuccessfulTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>